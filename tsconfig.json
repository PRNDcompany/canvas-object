{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": ".",
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "dom",
      "esnext"
    ],
    "jsx": "react",
    "allowJs": true,
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "declaration": true
  },
  "exclude": [
    "index.js",
    "index.d.ts",
    "cores",
    "graphics",
    "node_modules"
  ],
  "include": [
    "src"
  ]
}
